---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import PromoBanner from '../../components/PromoBanner.astro';
import Reviews from '../../components/Reviews.astro';
import Footer from '../../components/Footer.astro';
import FloatingButtons from '../../components/FloatingButtons.astro';
import ContactForm from '../../components/ContactForm.astro';
import { languages } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof languages);

const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "https://santech-master.com/#organization",
  "name": "Santech-Master",
  "alternateName": t('hero.subtitle'),
  "url": "https://santech-master.com",
  "logo": "https://santech-master.com/logo.png",
  "image": "https://santech-master.com/logo.png",
  "description": t('meta.description'),
  "telephone": "+7-775-471-01-29",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": lang === 'kz' ? 'Алматы' : (lang === 'en' ? 'Almaty' : 'Алматы'),
    "addressCountry": "KZ"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "43.2220",
    "longitude": "76.8512"
  },
  "areaServed": {
    "@type": "City",
    "name": lang === 'kz' ? 'Алматы' : (lang === 'en' ? 'Almaty' : 'Алматы')
  },
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
    "opens": "00:00",
    "closes": "23:59"
  },
  "priceRange": lang === 'kz' ? '3000 KZT бастап' : (lang === 'en' ? 'from 3000 KZT' : 'от 3000 KZT'),
  "currenciesAccepted": "KZT",
  "paymentAccepted": lang === 'kz' ? 'қолма-қол, карта' : (lang === 'en' ? 'cash, card' : 'наличные, карта'),
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": t('services.title'),
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": t('services.1.title'),
          "description": t('services.1.desc')
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": t('services.2.title'),
          "description": t('services.2.desc')
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": t('services.3.title'),
          "description": t('services.3.desc')
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": t('services.4.title'),
          "description": t('services.4.desc')
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": t('services.5.title'),
          "description": t('services.5.desc')
        }
      }
    ]
  }
};
---

<BaseLayout
  title={lang === 'kz' ? 'Басты бет - Алматыда сантехникалық қызметтер' : (lang === 'en' ? 'Home - Plumbing Services in Almaty' : 'Главная - Санехнические услуги в Алматы')}
  description={t('meta.description')}
  image="/logo.png"
>
  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  <Header />
  <PromoBanner />

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <div class="hero-logo">
            <img src="/logo.png" alt="Santech-Master" />
          </div>
          <p class="hero-subtitle">{t('hero.subtitle')}</p>
          <div class="hero-features">
            <div class="feature">{t('hero.feature1')}</div>
            <div class="feature">{t('hero.feature2')}</div>
            <div class="feature">{t('hero.feature3')}</div>
          </div>
          <a href={`#contacts`} class="btn mt-lg">{t('hero.cta')}</a>
        </div>
      </div>
    </section>

    <!-- Services -->
    <section id="services" class="section section-white">
      <div class="container">
        <h2 class="text-center">{t('services.title')}</h2>
        <p class="text-center text-light mb-xl">{t('services.subtitle')}</p>
        <div class="services-list">
          <!-- Service 1 -->
          <div class="service-row">
            <div class="service-image">
              <img src="/images/service-1.png" alt={t('services.1.title')} />
            </div>
            <div class="service-content">
              <h3>{t('services.1.title')}</h3>
              <p>{t('services.1.desc')}</p>
            </div>
          </div>

          <!-- Service 2 -->
          <div class="service-row reverse">
            <div class="service-image">
              <img src="/images/service-2.png" alt={t('services.2.title')} />
            </div>
            <div class="service-content">
              <h3>{t('services.2.title')}</h3>
              <p>{t('services.2.desc')}</p>
            </div>
          </div>

          <!-- Service 3 -->
          <div class="service-row">
            <div class="service-image">
              <img src="/images/service-3.png" alt={t('services.3.title')} />
            </div>
            <div class="service-content">
              <h3>{t('services.3.title')}</h3>
              <p>{t('services.3.desc')}</p>
            </div>
          </div>

          <!-- Service 4 -->
          <div class="service-row reverse">
            <div class="service-image">
              <img src="/images/service-4.png" alt={t('services.4.title')} />
            </div>
            <div class="service-content">
              <h3>{t('services.4.title')}</h3>
              <p>{t('services.4.desc')}</p>
            </div>
          </div>

          <!-- Service 5 -->
          <div class="service-row">
            <div class="service-image">
              <img src="/images/service-5.png" alt={t('services.5.title')} />
            </div>
            <div class="service-content">
              <h3>{t('services.5.title')}</h3>
              <p>{t('services.5.desc')}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Us -->
    <section id="why" class="section section-gray">
      <div class="container">
        <h2 class="text-center">{t('why.title')}</h2>
        <div class="grid">
          <div class="why-item text-center">
            <h3>{t('why.1.title')}</h3>
            <p>{t('why.1.desc')}</p>
          </div>
          <div class="why-item text-center">
            <h3>{t('why.2.title')}</h3>
            <p>{t('why.2.desc')}</p>
          </div>
          <div class="why-item text-center">
            <h3>{t('why.3.title')}</h3>
            <p>{t('why.3.desc')}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Reviews - Социальное доказательство -->
    <Reviews />

    <!-- Pricing -->
    <section id="pricing" class="section section-dark">
      <div class="container">
        <h2 class="text-white text-center">{t('pricing.title')}</h2>
        <div class="grid">
          <div class="price-card">
            <h3>{t('pricing.inspection')}</h3>
            <div class="price">5000 KZT</div>
          </div>
          <div class="price-card">
            <h3>{t('pricing.blockage')}</h3>
            <div class="price">{t('pricing.from')} 3000 KZT</div>
          </div>
          <div class="price-card">
            <h3>{t('pricing.faucet')}</h3>
            <div class="price">{t('pricing.from')} 10000 KZT</div>
          </div>
          <div class="price-card">
            <h3>{t('pricing.pipes')}</h3>
            <div class="price">{t('pricing.from')} 10000 KZT</div>
          </div>
          <div class="price-card">
            <h3>{t('pricing.installation')}</h3>
            <div class="price">{t('pricing.from')} 15000 KZT</div>
          </div>
          <div class="price-card">
            <h3>{t('pricing.heating')}</h3>
            <div class="price">{t('pricing.from')} 10000 KZT</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process -->
    <section class="section">
      <div class="container">
        <h2 class="text-center">{t('process.title')}</h2>
        <p class="text-center mb-xl">{t('process.subtitle')}</p>
        <div class="grid">
          <div class="process-item">
            <div class="number">1</div>
            <h3>{t('process.1.title')}</h3>
            <p>{t('process.1.desc')}</p>
          </div>
          <div class="process-item">
            <div class="number">2</div>
            <h3>{t('process.2.title')}</h3>
            <p>{t('process.2.desc')}</p>
          </div>
          <div class="process-item">
            <div class="number">3</div>
            <h3>{t('process.3.title')}</h3>
            <p>{t('process.3.desc')}</p>
          </div>
          <div class="process-item">
            <div class="number">4</div>
            <h3>{t('process.4.title')}</h3>
            <p>{t('process.4.desc')}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contacts -->
    <section id="contacts" class="section section-dark">
      <div class="container">
        <h2 class="text-white text-center">{t('contacts.title')}</h2>
        <p class="text-white text-center mb-lg">{t('contacts.subtitle')}</p>

        <ContactForm />

        <div class="contacts text-center mt-xl">
          <div class="contact-block">
            <h3 class="text-white">{t('contacts.hours')}</h3>
            <h3 class="text-white">{t('contacts.address')}</h3>
            <div class="mt-lg">
              <a href="https://wa.me/77754710129" target="_blank" class="btn">WhatsApp</a>
              <a href="tel:+77754710129" class="btn ml-md">{t('form.phone')}</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingButtons />
</BaseLayout>

<style>
  /* Copy all styles from original index.astro */
  .hero {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: var(--white);
    padding: 4rem 0;
    text-align: center;
  }

  .hero-logo {
    width: 150px;
    height: 150px;
    margin: 0 auto 2rem;
    background: white;
    border-radius: 50%;
    padding: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .hero-features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .feature {
    font-size: 1.1rem;
    font-weight: 500;
  }

  .services-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .service-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
  }

  .service-row.reverse {
    direction: rtl;
  }

  .service-row.reverse > * {
    direction: ltr;
  }

  .service-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    border-radius: 12px;
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .service-content h3 {
    color: var(--purple-primary);
    margin-bottom: 1rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .why-item,
  .process-item {
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .section-gray .why-item {
    background: white;
  }

  .process-item {
    position: relative;
    padding-top: 4rem;
  }

  .number {
    position: absolute;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .price-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
  }

  .price-card h3 {
    color: var(--purple-primary);
    margin-bottom: 1rem;
  }

  .price {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
  }

  .contact-block {
    max-width: 600px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .hero-subtitle {
      font-size: 1.2rem;
    }

    .hero-features {
      flex-direction: column;
      gap: 1rem;
    }

    .service-row,
    .service-row.reverse {
      grid-template-columns: 1fr;
    }

    .service-image {
      height: 250px;
    }

    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
