# Google Analytics
# Получите ID на https://analytics.google.com
# Формат: G-XXXXXXXXXX
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Яндекс.Метрика
# Получите ID на https://metrika.yandex.ru
# Формат: 12345678
PUBLIC_YANDEX_METRIKA_ID=12345678

# Telegram Bot (для отправки заявок)
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Cloudflare Turnstile (защита от ботов)
# Получите ключи на https://dash.cloudflare.com/
# Site Key - публичный ключ для клиента
PUBLIC_TURNSTILE_SITE_KEY=your_site_key_here
# Secret Key - приватный ключ для сервера
TURNSTILE_SECRET_KEY=your_secret_key_here
